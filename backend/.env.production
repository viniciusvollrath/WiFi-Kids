# Production Environment Configuration for Hostinger
# Copy this to .env and fill in your actual values

# Database Configuration
# For MySQL (most common on Hostinger)
DATABASE_URL=mysql+pymysql://username:password@localhost/database_name

# For PostgreSQL (if available)
# DATABASE_URL=postgresql://username:password@localhost/database_name

# For SQLite (fallback - not recommended for production)
# DATABASE_URL=sqlite:///./production.db

# OpenAI Configuration - REQUIRED
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=1000

# Session and Challenge Settings
SESSION_TTL_SEC=1800
CHALLENGE_REQUIRED=true
CHALLENGE_ATTEMPTS=3

# CORS - Add your frontend domain
CORS_ORIGINS=https://your-frontend-domain.com,https://app.wifikids.com

# Timezone
DEFAULT_TIMEZONE=America/Sao_Paulo
ACCESS_WINDOWS=07:00-21:00

# Agent Configuration
AGENT_TYPE=langchain
AGENT_DEFAULT_PERSONA=tutor
AGENT_SUBJECTS=math,history,geography,english,physics
AGENT_FALLBACK_ENABLED=true

# Router Configuration
ROUTER_ENABLED=true
ROUTER_PREFER_LLM=openai
ROUTER_FALLBACK_TO_MOCK=false

# Validation Configuration
VALIDATION_ENABLE_PARTIAL_CREDIT=true
VALIDATION_CASE_SENSITIVE=false
VALIDATION_IGNORE_WHITESPACE=true
VALIDATION_DEFAULT_THRESHOLD=0.75

# Production Settings
DEBUG=false
TESTING=false