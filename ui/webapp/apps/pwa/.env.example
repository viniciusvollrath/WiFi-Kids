# WiFi-Kids PWA Configuration
# Copy this file to .env.local for local development

# API Configuration
VITE_API_URL=http://localhost:8000
VITE_API_TIMEOUT=10000

# Mock Mode (for development/demo)
VITE_MOCK=false

# Default Persona (tutor, maternal, general)
VITE_DEFAULT_PERSONA=tutor

# Available Subjects (comma-separated)
VITE_SUBJECTS=math,history,geography,science,language,general

# Challenge Configuration
VITE_MAX_ATTEMPTS=3
VITE_CHALLENGE_TIMEOUT=300000

# UI Configuration
VITE_SHOW_PERSONA_SELECTOR=false
VITE_SHOW_DEBUG_INFO=false
VITE_DEFAULT_LOCALE=pt

# Router Configuration (for OpenWRT integration)
VITE_ROUTER_ID=pwa-router
VITE_DEFAULT_ACCESS_MINUTES=30